    <!-- TreeView items data template-->
    <DataTemplate x:Key="SolidityStaticAnalysisInfoTemplate" DataType="{x:Type vm:SolidityStaticAnalysisInfo}">
        <StackPanel x:Name="GroupPanel" Orientation="Horizontal">
            <ui:Image x:Name="NodeImage" Width="16" Height="16"  Source="{StaticResource InfoDrawingImage}"/>
            <Label x:Name="NodeText" Content="{Binding Path=DisplayName}" Style="{StaticResource {x:Static vsshell:VsResourceKeys.ThemedDialogLabelStyleKey}}" />
        </StackPanel>
        <DataTemplate.Triggers>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=Kind}" Value="Folder" />
                    <Condition Binding="{Binding Path=Name}" Value="Analysis" />
                </MultiDataTrigger.Conditions>
                <Setter TargetName="NodeImage" Property="Visibility" Value="Hidden" />
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=Kind}" Value="Folder" />
                    <Condition Binding="{Binding Path=Name}" Value="Informational" />
                </MultiDataTrigger.Conditions>
                <Setter TargetName="NodeImage" Property="Source" Value="{StaticResource InfoDrawingImage}" />
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=Kind}" Value="Folder" />
                    <Condition Binding="{Binding Path=Name}" Value="Low" />
                </MultiDataTrigger.Conditions>
                <Setter TargetName="NodeImage" Property="Source" Value="{StaticResource LowDrawingImage}" />
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=Kind}" Value="Folder" />
                    <Condition Binding="{Binding Path=Name}" Value="Medium" />
                </MultiDataTrigger.Conditions>
                <Setter TargetName="NodeImage" Property="Source" Value="{StaticResource MediumDrawingImage}" />
            </MultiDataTrigger>
            <MultiDataTrigger>
                <MultiDataTrigger.Conditions>
                    <Condition Binding="{Binding Path=Kind}" Value="Folder" />
                    <Condition Binding="{Binding Path=Name}" Value="Optimization" />
                </MultiDataTrigger.Conditions>
                <Setter TargetName="NodeImage" Property="Source" Value="{StaticResource OptimizationDrawingImage}" />
            </MultiDataTrigger>
        </DataTemplate.Triggers>
    </DataTemplate>

    <!-- TreeView style -->
    <Style x:Key="TreeViewItemStyle" TargetType="{x:Type TreeViewItem}" BasedOn="{StaticResource {x:Static vsshell:VsResourceKeys.ThemedDialogTreeViewItemStyleKey}}">
        <Setter Property="HeaderTemplate" Value="{StaticResource SolidityStaticAnalysisInfoTemplate}" />
    </Style>
    <Style x:Key="TreeViewStyle" TargetType="{x:Type TreeView}" BasedOn="{StaticResource {x:Static vsshell:VsResourceKeys.ThemedDialogTreeViewStyleKey}}" />
    
    <!-- TreeView items sort in ascending order -->
    <cm:SortDescriptionCollection x:Key="AscendingNames">
        <cm:SortDescription PropertyName="Header.CategoryName" Direction="Ascending" />
    </cm:SortDescriptionCollection>

    <!-- TreeView items sort in ascending order -->
    <cm:SortDescriptionCollection x:Key="DescendingNames">
        <cm:SortDescription PropertyName="Header.CategoryName" Direction="Descending" />
    </cm:SortDescriptionCollection>

    <!-- Context menu style -->
    <Style x:Key="ContextMenuStyle" TargetType="{x:Type ContextMenu}" BasedOn="{StaticResource {x:Static vsshell:VsResourceKeys.ContextMenuStyleKey}}">
        <Style.Resources>
            <Style TargetType="{x:Type Image}">
                <Setter Property="Height" Value="16" />
                <Setter Property="Width" Value="16" />
            </Style>
            <Style TargetType="{x:Type Label}" BasedOn="{StaticResource {x:Static vsshell:VsResourceKeys.ThemedDialogLabelStyleKey}}" />
        </Style.Resources>
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Grid.IsSharedSizeScope" Value="true" />
        <Setter Property="HasDropShadow" Value="True" />
        <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.MenuTextKey}}"/>
        <Setter Property="Background" Value="{DynamicResource {x:Static vsshell:VsBrushes.MenuKey}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContextMenu}">
                    <Border x:Name="Border" Background="{DynamicResource {x:Static vsshell:VsBrushes.ToolWindowBackgroundKey}}" BorderThickness="1">
                        <Border.BorderBrush>
                            <SolidColorBrush Color="{DynamicResource {x:Static vsshell:VsColors.DropDownPopupBorderKey}}" />
                        </Border.BorderBrush>
                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Cycle" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="HasDropShadow" Value="true">
                            <Setter TargetName="Border" Property="Padding" Value="0,3,0,3" />
                            <Setter TargetName="Border" Property="CornerRadius" Value="4" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>