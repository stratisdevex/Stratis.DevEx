<UserControl x:Class="Stratis.VS.StratisEVM.UI.SolidityStaticAnalysisToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"              
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:stratisui="clr-namespace:Stratis.VS.StratisEVM.UI;assembly="
             xmlns:vm="clr-namespace:Stratis.VS.StratisEVM.UI.ViewModel;assembly=" 
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0" 
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="100"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             Name="SolidityAnalysisToolWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                <ui:Button Name="AnalyzeButton" Appearance="Primary" Content="Analyze" Margin="0,10,0,0" Width="100" Height="36" Click="AnalyzeButton_Click" />
                
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
